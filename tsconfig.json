{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6"],
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "build/src",
    "rootDir": "src",
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea"
  ]
}
